doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    include _partial/head
  body(class=bodyclass)
    header
      a.sponsor-cta(href="#sponsorship")
        | Interested in Sponsoring Thunder Plains?
      .buildings
        .intro
          block header
            h1
              a(href=config.root)
                = config.title
            h2
              = config.subtitle
            h3
              | November 3
              sup rd
              |  2015
              span.kapow
              | Oklahoma City

        nav
          .container
            ul.row
              li.col-md-2
                a(href="#schedule") Schedule
              li.col-md-2
                a(href="#tickets") Tickets
              li.col-md-2
                a(href="#location") Location
              li.col-md-3
                a(href="#coc") Code of Conduct
              li.col-md-2
                a(href="#videos") Videos
              li.col-md-1
                a(href="#contact") Contact
            a.scroll-hint(href="#conference")

    #content
      block content

    footer
      include _partial/footer

    // Modal
    #modal-talks.modal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true") &#215;
