#passes
  .passes-list
    @extend .list-simple
    margin-top: -1*10px
    @media only screen and (min-width: $break-small)
      text-align: left
    li
      background: $creme
      margin: 0 0 20px
      position: relative
      z-index: 1
      overflow: hidden
      &:before, &:after
        content: ""
        display: block
        width: 60px
        height: 60px
        border-radius: 50%
        background: $background
        position: absolute
        z-index: 1
        top: 50%
        margin-top: -1*30px
      &:before
        left: 0
        margin-left: -1*40px
      &:after
        right: 0
        margin-right: -1*40px
      .pass-title, .pass-price
        padding: 40px 60px
        height: 160px
        @media only screen and (max-width: $break-small)
          height: 80px
          padding: 25px
      .pass-title
        color: $green-light
        h3
          display: inline
          margin: 0
          text-transform: uppercase
          font-size: 50px
          line-height: 50px
          margin-right: 0.25em
          @media only screen and (max-width: $break-small)
            font-size: 25px
            line-height: 20px
            display: block
            margin-bottom: 0
      .pass-price
        padding: 60px
        background: $purple-light
        color: white
        text-transform: uppercase
        font-weight: 800
        font-size: 60px
        @media only screen and (max-width: $break-small)
          font-size: 40px
          line-height: 30px
        sup
          font-weight: 300
          font-size: 0.5em
          top: -1*0.7em
          text-decoration: underline
      &.pass-lightning .pass-price
        background: mix($orange, white, 65%)
      &.pass-thunder .pass-price
        background: $orange
      &.pass-rain .pass-price
        background: mix($purple-dark, white, 70%)
      &.pass-earlybird .pass-price
        background: $orange
      &.pass-onsite .pass-price
        background: $purple-dark
      &.pass-students .pass-price
        background: mix($blue-dark, white, 70%)
      &.pass-bulk .pass-price
        background: $blue-dark
      &.soldout
        .pass-title
          color: mix($green-light, $creme, 20%)
        .pass-price
          font-size: 50px
          text-decoration: line-through
          color: mix($purple-light, white)
          @media only screen and (max-width: $break-small)
            font-size: 30px
            line-height: 30px
        &.pass-lightning .pass-price
          color: mix($orange, white, 25%)
        &.pass-thunder .pass-price
          color: mix($orange, white, 45%)
        &.pass-rain .pass-price
        &.pass-onsite .pass-price
          color: mix($purple-dark, white)
        &.pass-students .pass-price
          color: mix($blue-dark, white)
