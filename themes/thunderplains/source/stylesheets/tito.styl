@import 'settings'

.tito-wrapper
  background $background
  font-family $font-body
  color $blue-dark
  margin 20px auto
  max-width: 1140px
  width 100%
  height: 416px

.tito-ticket-list
  display table
  list-style-type none
  margin 0 0 20px 0
  padding 0
  width 100%

#tito-previous-releases,
.tito-ticket-list.tito-ticket-waitlist
  margin 0

$divider = 1px solid #ccc
$entryHeight = 60px
$tail-width = $entryHeight * 3
$tail-width-small = $entryHeight * 2
$calculated-padding = ($entryHeight - $font-size-body) * 0.5

.tito-ticket
  display table-row
  height $entryHeight
  &.tito-locked-ticket
    & > div
      padding 10px 0

.tito-discount-code
  display table-row
  height $entryHeight
  &:before,&:after
    content: " ";
    display: table;
  .tito-discount-code-form-wrapper
    display table-cell
    text-align left
    height $entryHeight
    line-height 100%
    padding 4px
    column-span: all; /* W3C */
    -webkit-column-span: all; /* Safari & Chrome */
    -moz-column-span: all; /* Firefox */
    -ms-column-span: all; /* Internet Explorer */
    -o-column-span: all; /* Opera */
    .form-horizontal
      margin: 7px
      
.tito-ticket-name-wrapper
  height $entryHeight
  border-bottom $divider
  display: table-cell
  font-family: $font-headers
  vertical-align middle
  text-align left
  line-height: 100%
  padding: 4px
  label
    margin-top: 16px

  .tito-tickets-remaining
    background $creme
    color $blue-dark
    font-size 16px
    padding 4px 6px
    position relative
    top -4px
    margin-left 16px
    white-space nowrap
    @media only screen and (max-width: $break-small)
      font-size 12px
      padding: 2px 3px
      margin 2px
      position: static

.tito-ticket-name
  .label
    &.label-default
      border 1px solid #333
      border-radius 2px
      color #333
      font-size 10px
      font-weight bold
      margin-left 5px
      padding 2px 5px
      position relative
      top -1px
      text-transform uppercase

.tito-ticket-description
  font-size 16px
  color: #7c8079
  @media only screen and (max-width: $break-small)
    font-size 12px

.tito-ticket-price-quantity-wrapper,
.tito-ticket-status,
.tito-ticket-status-sold-out
  border-bottom $divider
  display table-cell
  text-align right
  vertical-align middle
  width: $tail-width
  @media only screen and (max-width: $break-small)
    width: $tail-width-small

.tito-ticket-price,
.tito-ticket-quantity
  height $entryHeight
  display inline-block
  float: right
  line-height: 100%
  vertical-align middle
  @media only screen and (max-width: $break-small)
    line-height: inherit
.tito-ticket-quantity
    padding 0
    span
      display: inline-block
      float: left
      font-size: $entryHeight * 0.5
      margin: ($entryHeight * 0.25) ($entryHeight * 0.14)
      @media only screen and (max-width: $break-small)
        font-size: $entryHeight * 0.4
        margin: ($entryHeight * 0.3) ($entryHeight * 0.15)
.tito-ticket-price
  float: left
  span
    height $entryHeight
    padding $calculated-padding 0


$input-font-size = 16px
.tito-ticket-quantity-field
  background-color #fff
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  display inline-block
  font-size $input-font-size
  height $entryHeight * 0.75
  line-height 1.42857143
  margin (($entryHeight * 0.25) * 0.5) 0
  padding (($entryHeight * 0.5) - $input-font-size) * 0.5
  text-align center
  width 45px
  &:hover
    background-color: lighten($purple-light, $hoverBackgroundLighten)
  &:focus
    background-color: lighten($purple-light, $hoverBackgroundLighten)
    border-color: saturate($purple-light, $hoverSaturate)
    outline-width: 0

.tito-ticket-donation-field
  background-color #fff
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  display inline-block
  font-size 14px
  height 34px
  line-height 1.42857143
  margin 5px 0
  padding 6px 12px
  text-align center
  width 85px
  margin-left 6px

.tito-ticket-price
  span
    display block

.tito-ticket-vat
  float right
  font-size 10px
  padding-bottom 5px

.tito-ticket-status span
  background $creme
  color $blue-dark
  font-size $font-size-body
  display inline-block
  line-height 100%
  margin 5px 0
  padding $calculated-padding
  text-align center
  vertical-align middle
  text-decoration none
  width $tail-width
  @media only screen and (max-width: $break-small)
    font-size $font-size-body * 0.6
    width $tail-width-small

.btn
  &.btn-default
    &.btn-waitlist
      background #fff
      border 1px solid #ccc
      color #333
      width 200px
      &:hover
        border 1px solid #333
    &.tito-discount-apply-button
      display none

.tito-discount-code
  display table-row
  .form-horizontal
    height 60px
    line-height 60px

.tito-discount-code-label
  display none

.tito-discount-code-field
  background-color #fff
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  display inline-block
  font-size $input-font-size
  height $entryHeight * 0.75
  line-height 1.42857143
  margin (($entryHeight * 0.25) * 0.5) 0
  padding (($entryHeight * 0.5) - $input-font-size) * 0.5
  text-align left
  width 98%
  &:hover
    background-color: lighten($purple-light, $hoverBackgroundLighten)
  &:focus
    background-color: lighten($purple-light, $hoverBackgroundLighten)
    border-color: saturate($purple-light, $hoverSaturate)
    outline-width: 0

.tito-discount-code-show
  display none

.tito-submit-wrapper
  text-align right
  margin-top -90px

.tito-submit
  background: desaturate(lighten($purple-light, $hoverBackgroundLighten), $hoverDesaturateBack)
  border: 1px solid $purple-light
  color #333
  cursor pointer
  font-size $font-size-body
  height $entryHeight
  margin 0
  text-align center
  width $tail-width
  vertical-align middle
  &:hover
    background-color: lighten($purple-light, $hoverBackgroundLighten)
    border-color: saturate($purple-light, $hoverSaturate)
  @media only screen and (max-width: $break-small)
    width 100%

.tito-ticket.tito-locked-ticket label,
.tito-ticket.tito-locked-ticket span
  opacity .5

.locked-tickets-message
  p
    font-size 14px
    line-height 1.3
    opacity .5

.tito-badge-link
  font-size 12px
  display inline-block
  margin-bottom 5px
  text-align center
