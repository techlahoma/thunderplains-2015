/* Syntax highlighting stolen from hexo.js webiste */
pre,
  font-family: "Source Code Pro", Monaco, Menlo, Consolas, monospace
  color: #4d4d4c
  background: #eee
  font-size: 13px
code
  -webkit-border-radius: 2px
  border-radius: 2px
  border: 1px solid #ddd
  padding: 0 5px
pre
  padding: 10px 15px
  padding-bottom: 0
  line-height: 22px
  -webkit-border-radius: 4px
  border-radius: 4px
  border: 1px solid #ddd
pre code
  border: none
  display: block
  padding: 0
.highlight
  background: #eee
  border: 1px solid #ddd
  -webkit-border-radius: 4px
  border-radius: 4px
  padding: 10px 15px
  color: #4d4d4c
  overflow: auto
  margin: 0
.highlight figcaption
  zoom: 1
  margin: -5px 0 5px
  font-size: 0.9em
  color: #999
.highlight figcaption:before,
  content: ""
  display: table
.highlight figcaption:after
  clear: both
.highlight figcaption a
  float: right
.highlight pre
  padding: 0
  border: none
  background: none
pre .comment,
  color: #8e908c
pre .variable,
  color: #c82829
pre .number,
  color: #f5871f
pre .class,
  color: #718c00
pre .string,
  color: #718c00
pre .css .hexcolor
  color: #3e999f
pre .function,
  color: #4271ae
pre .keyword,
  color: #8959a8
.highlight
  .gutter
    display: none
